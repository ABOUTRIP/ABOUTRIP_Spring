 	 <resultMap type="noticeDto" id="notice">
		<result column="notice_id" property="noticeId"/>
		<result column="notice_title" property="noticeTitle"/>
		<result column="notice_contents" property="noticeContents"/>
		<result column="user_id" property="userId"/>
		<result column="notice_create_at" property="noticeCreateAt"/>
		<result column="notice_delete_at" property="noticeDeleteAt"/>
	</resultMap>
 	
 	<insert id="writeNotice" parameterType="noticeDto">
		insert into notices (user_id, notice_title, notice_contents)
		values (#{userId}, #{noticeTitle}, #{noticeContents})
	</insert>
	
	<!--  -->
	<select id="listNotice" parameterType="map" resultMap="notice">
		select *
		from notices 
		<if test="word != null and word != ''">
			where notice_title like concat('%', #{word}, '%') 
			or notice_contents like concat('%', #{word}, '%') 
		</if> 
		order by notice_id desc
		limit #{start}, #{spp}
	</select>
	
	
	<select id="getTotalCount" parameterType="map" resultType="int">
		select count(notice_id) 
		from notices 
		<if test="word != null and word != ''"> 
			where notice_title like concat('%', #{word}, '%') 
			or notice_contents like concat('%', #{word}, '%') 
		</if>
	</select>
	
		
	<select id="getNotice" parameterType="int"
		resultMap="notice">
		select *
		from notices
		where notice_id = #{noticeId}
	</select>
	
	<update id="modifyNotice" parameterType="noticeDto">
		update notices
		set notice_title = #{noticeTitle}, notice_contents = #{noticeContents}
		where notice_id = #{noticeId}
	</update>
	
	<delete id="deleteNotice" parameterType="int">
		delete from notices
		where notice_id = #{noticeId}
	</delete>
</mapper>	