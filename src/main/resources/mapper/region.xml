<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.ssafy.project.model.mapper.RegionMapper">
	
	<resultMap type="likeInfoDto" id="likeInfo">
		<result column="user_id" property="userId" />
		<result column="content_id" property="contentId" />
	</resultMap>
	
	<insert id="like" parameterType="likeInfoDto">
		insert into favorite (user_id, content_id)
		values (#{userId}, #{contentId})
	</insert>

	<delete id="cancelLike" parameterType="likeInfoDto">
		delete from favorite
		where user_id = #{userId} and content_id = #{contentId}
	</delete>
	
	<select id="listLike" parameterType="string" resultType="int">
		select content_id
		from favorite
		where user_id = #{user_id}
	</select>

</mapper>